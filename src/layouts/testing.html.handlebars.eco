<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="utf-8" />
  <meta name="viewport" content="initial-scale=1.0, minimum-scale=1.0" />
  <meta name="apple-mobile-web-app-capable" content="yes" />

  <!-- Site Properities -->
  <title>Testing -- {{document.title}}</title>
  <meta name="description" content="{{document.description}}" />
  <meta name="robots" content="noindex, nofollow" />

  <%- @getBlock('styles').add(['/assets/css/{{document.pageStyle}}']).toHTML() %>

  <!-- Typekit -->
  <!-- removing for now
  <script type="text/javascript" src="//use.typekit.net/mot7pgg.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script> -->

</head>

<body class="{{document.bodyClass}}">

  <nav class="siteNav">
    <div class="container">
      <a href="#" class="siteNav-link" title="Home">Home</a>
      <a href="#" class="siteNav-link" title="About">About</a>
      <a href="#" class="siteNav-link" title="Contact">Contact</a>
      <a href="#" class="siteNav-link" title="Blog">Blog</a>
    </div>
  </nav>
  <section>
    <div class="siteContent container">
      {{{ content }}}
    </div>
  </section>
  <footer class="siteFooter">
    <div class="container">
      <p>This is a footer. OMG!</p>
    </div>
  </footer>

  <!-- DocPad Scripts + Our Own -->
  <%- @getBlock('scripts').add(['/vendor/log.js']).toHTML() %>


</body>
</html>