//- BASE STYLES ----------------------------------------------- //

html
  -webkit-text-size-adjust: none
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

body
  padding: 20px
  position: relative
  font-size: 18px
  font-family: $font-tisa-serif
  font-weight: $font-weight-normal
  text-align: center
  line-height: 1.5
  color: $grey-3

h2
  margin-bottom: 25px
  font-size: 24px
  font-style: italic

h3
  margin-bottom: 20px
  font-style: italic

p
  margin-bottom: 20px

a
  text-decoration: none

  &:hover
    opacity: .7

em
  font-style: italic

.text-drk
  a:not(.button)
    background: linear-gradient(to top, black(.2) 2px, black(0) 2px)
    color: $grey-3

.text-light
  color: white
  a:not(.button)
    background: linear-gradient(to top, white(.3) 2px, white(0) 2px)
    color: white

// Clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both
