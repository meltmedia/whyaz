extends ../../templates/layout

block vars
  - var title = "WhyAZ Community"
  - var description = "See what people are sharing about Arizona with #whyaz."
  - var bodyClass = "community"
  - var pagePath = "community"

block content

  .flex-container
    .flex-1of2
      .content.pale-blue.text-drk
        h2 Arizona Love
        p See the reasons others love Arizona.
    .flex-1of2
      .content.red.text-light.center-vert
        h3 Share yours with <a href="https://twitter.com/search?q=%23whyaz&amp;src=typd">#whyaz</a>.

    .flex-1of1
      #juicer-embed

        script(src="//assets.juicer.io/embed.js" type="text/javascript")
        link(href="//assets.juicer.io/embed.css" media="all" rel="stylesheet" type="text/css")
        ul(class="juicer-feed" data-feed-id="whyaz")
